{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "packages/*/config.d.ts",
    "plugins/*/src",
    "plugins/*/config.d.ts",
    "plugins/*/dev",
    "plugins/*/migrations"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "@internal/backstage-plugin-justpush-backend": ["./plugins/justpush-backend/src"],
      "@internal/backstage-plugin-justpush": ["./plugins/justpush/src"]
    }
  },
  
}
